          <a href="/" class="nav-link">Trang chủ</a>
        </li>
      </ul>

      <!-- SEARCH FORM -->
      <form class="form-inline ml-3" action="/books/search" method="GET">
        <div class="input-group input-group-sm">
          <input name="keyword" class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
          <div class="input-group-append">
            <button class="btn btn-navbar" type="submit">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>

      <!-- Right navbar links -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/admin/logout">Đăng xuất</a></li>
      </ul>
    </nav>
