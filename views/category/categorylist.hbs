<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Categories</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Categories</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <a class=".card-link" href="/category/add" style="float: right;">
                                <button class="btn" style="background-color: #2980b9;color: white;">Create
                                    category</button>
                            </a>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover w.auto">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>options</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    {{#each categoryList}}
                                    <tr>
                                        <td>{{this._id}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.description}}</td>
                                        <td style="text-align: center;">
                                            <button type="button" class="btn btn-info" data-toggle="modal"
                                                data-target="#modal-info">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <!-- Pagination Start -->
                            <div class="col-md-12">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-center">


                                        {{#ifeq hasPrevPage true}}
                                        <li class="page-item">
                                            <a class="page-link" href="?page={{prevPage}}" tabindex="-1">Prev</a>
                                        </li>
                                        <li class="page-item"><a class="page-link"
                                                href="?page={{prevPage}}">{{prevPage}}</a>
                                        </li>
                                        {{/ifeq}}
                                        <li class="page-item active"><a class="page-link">{{page}}</a></li>
                                        {{#ifeq hasNextPage true}}
                                        <li class="page-item"><a class="page-link"
                                                href="?page={{nextPage}}">{{nextPage}}</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="?page={{nextPage}}">Next</a>
                                        </li>
                                        {{/ifeq}}
                                    </ul>
                                </nav>
                            </div>
                            <!-- Pagination Start -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <div class="modal fade" id="modal-info" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-info">
                <form id="update-form">
                    <div class="modal-header">
                        <h4 class="modal-title">Info</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="card-body">

                            <div class="form-group">
                                <label for="name">Tên</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Nhập tên">
                            </div>
                            <div class="form-group">
                                <label for="description">Mô tả</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    placeholder="Nhập mô tả">
                        </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button id="btn-change" type="button" class="btn btn-danger btn-block"><i
                                class="fa fa-bell"></i>block</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>
<!-- /.content-wrapper -->
